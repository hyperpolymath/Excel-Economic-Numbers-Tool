{
  "name": "economic-toolkit-v2",
  "version": "2.0.0",
  "description": "Cross-platform Excel/LibreOffice add-in for economic modelling and investigative research",
  "main": "dist/index.js",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "npm run build:typescript && npm run build:rescript",
    "build:typescript": "tsc && webpack --mode production",
    "build:rescript": "rescript build",
    "build:excel": "webpack --config webpack.excel.config.js --mode production",
    "build:libre": "webpack --config webpack.libre.config.js --mode production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "lint:fix": "eslint src/**/*.ts src/**/*.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "watch": "webpack --watch --mode development",
    "docs": "typedoc --out docs/typescript src/typescript",
    "clean": "rm -rf dist build node_modules",
    "prepack": "npm run build"
  },
  "keywords": [
    "excel",
    "libreoffice",
    "economics",
    "data",
    "addin",
    "office.js",
    "uno"
  ],
  "author": "Hyperpolymath",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hyperpolymath/excel-economic-number-tool-.git"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "rescript": "^11.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.2.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@microsoft/office-js": "^1.1.0",
    "@microsoft/office-js-helpers": "^1.0.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
